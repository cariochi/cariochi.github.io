source "https://rubygems.org"

gem "jekyll", "~> 4.3"

# Plugins (max usage, minimal custom code)
gem "jekyll-seo-tag"
gem "jekyll-sitemap"
gem "jekyll-feed"
gem "jekyll-redirect-from"
gem "jekyll-include-cache"
gem "jekyll-toc"           # hierarchical right-side table of contents

# GitHub Actions will build the site; we won't rely on the limited GH Pages plugin allowlist.
group :jekyll_plugins do
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
  gem "jekyll-feed"
  gem "jekyll-redirect-from"
  gem "jekyll-include-cache"
  gem "jekyll-toc"
end
